# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=ngfw_dashboard

# Alternative MongoDB Atlas connection (comment out local URI above)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ngfw_dashboard?retryWrites=true&w=majority

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Authentication (for future implementation)
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=604800

# Real-time Configuration
WEBSOCKET_PORT=3001
ENABLE_REAL_TIME=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Data Retention Configuration
DATA_RETENTION_DAYS=90
STATS_RETENTION_DAYS=30
LOGS_RETENTION_DAYS=365

# Performance Configuration
DB_CONNECTION_POOL_SIZE=10
DB_CONNECTION_TIMEOUT_MS=5000
API_TIMEOUT_MS=30000

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_THREAT_INTELLIGENCE=true
ENABLE_GEO_LOCATION=true

# External Services (optional)
THREAT_INTEL_API_KEY=your-threat-intel-api-key
GEO_IP_API_KEY=your-geo-ip-api-key
EMAIL_SERVICE_API_KEY=your-email-service-api-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=60000
ALERT_EMAIL_RECIPIENTS=admin@company.com

# Development Configuration
DEBUG_MODE=false
ENABLE_API_DOCS=true
ENABLE_PERFORMANCE_MONITORING=true
